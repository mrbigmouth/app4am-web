#topic {
  min-height: 100vh;
  background: white;

  ul.nav-tabs {
    margin-top: 10px;
  }

  div.eachNews {
    position: relative;
    min-height: 70px;
    padding: 20px;
    margin-top: 10px;
    cursor: pointer;

    span.score {
      position: absolute;
      left: -10px;
      top: -5px;
      opacity: 0.5;
      display: inline-block;
      padding: 5px;
    }
  }
}